{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@domain/*": ["domain/*"],
      "@data/*": ["data/*"],
      "@infrastructure/*": ["infrastructure/*"],
      "@presentation/*": ["presentation/*"],
      "@utils/*": ["utils/*"],
      "@main/*": ["main/*"],
    },
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
  },
  "include": ["src"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
}