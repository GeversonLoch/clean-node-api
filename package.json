{
  "name": "clean-node-api",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json && tsc-alias --project tsconfig.build.json",
    "start": "node dist/main/server.js",
    "start:debug": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/main/server.ts",
    "docker:up": "docker-compose up --build -d",
    "docker:down": "docker-compose down",
    "docker:start-debug": "ts-node-dev --poll --respawn --transpile-only --inspect=0.0.0.0:9222 -r tsconfig-paths/register src/main/server.ts",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "npm test -- --watch -c jest-unit-config.ts",
    "test:integration": "npm test -- --watch -c jest-integration-config.ts",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "deploy:heroku": "git push heroku master",
    "generate:dep-graph": "ts-node --project tsconfig.json scripts/generate-dependency-graph.ts"
  },
  "keywords": [],
  "author": "Geverson Loch",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.3.2",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^28.1.4",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.0.3",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@types/validator": "^13.11.7",
    "eslint": "^8.0.1",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^11.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^4.11.1",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.0",
    "mockdate": "^3.0.5",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^28.0.5",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fast-glob": "^3.3.3",
    "jsonwebtoken": "^9.0.2",
    "mongo-round": "^1.0.0",
    "mongodb": "^6.13.0",
    "validator": "^13.11.0"
  },
  "engines": {
    "node": "22.15.1"
  }
}
